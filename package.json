{
  "name": "electron-project",
  "private": false,
  "version": "0.1.0",
  "main": "electron/electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "start": "electron .",
    "packager": "electron-packager ./dist/ --platform=win32 --arch=x64 --overwrite",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "electron:build.win": "npm run build && electron-builder --win --dir",
    "electron:build.linux": "npm run build && electron-builder --linux appImage",
    "electron:build.test": "npm run build && electron-builder --dir",
    "electron:build.exe": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.my-website.my-app",
    "productName": "MyApp",
    "copyright": "Copyright Â© 2022 lili",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@types/js-cookie": "^3.0.2",
    "axios": "^0.27.2",
    "cos-nodejs-sdk-v5": "^2.11.12",
    "echarts": "^5.3.3",
    "electron": "^20.1.1",
    "element-plus": "^2.2.9",
    "import": "^0.0.6",
    "is-electron": "^2.2.1",
    "js-cookie": "^3.0.1",
    "less": "^4.1.3",
    "less-loader": "^11.0.0",
    "lodash": "^4.17.21",
    "mysql2": "^3.0.0-rc.1",
    "node-uuid": "^1.4.8",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.25.4",
    "sql.js": "^1.8.0",
    "vue": "^3.2.37",
    "vue-router": "^4.1.2",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^18.6.3",
    "@types/path-browserify": "^1.0.0",
    "@vitejs/plugin-vue": "^3.0.0",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^23.1.0",
    "electron-packager": "^15.5.1",
    "path-browserify": "^1.0.1",
    "vite": "^3.0.0",
    "vite-plugin-electron": "^0.9.0",
    "vite-plugin-optimizer": "^1.4.0",
    "vite-plugin-require-transform": "^1.0.3",
    "wait-on": "^6.0.1"
  }
}
